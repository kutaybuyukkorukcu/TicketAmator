@model OtobusBiletiUygulamasi.Areas.Admin.ViewModels.BusVehicleForm

@{
    ViewBag.Title = "Form";
}

<h2>Form</h2>

@{

    var state = "";

    if (Model.IsNew == true)
    {
        state = "Add A New";
    }
    else
    {
        state = "Edit";
    }
}

<h1> @(Model.IsNew ? state + " Bus" : state + " Bus") </h1>

@using (Html.BeginForm("Form", "Vehicle"))
{
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(x => x.BusName)
        @Html.TextBoxFor(x => x.BusName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.BusLicense)
        @Html.TextBoxFor(x => x.BusLicense, new { @class = "form-control" })
    </div>

    <input type="submit" value="@(Model.IsNew ? "Add" : "Edit")" />
    <br />
    <a href="@Url.Action("Index")"> or cancel </a>
}