@model OtobusBiletiUygulamasi.Areas.Admin.ViewModels.BusVehicleIndex

@{
    ViewBag.Title = "Index";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2> Arac Islemleri </h2>
        <br />
        <ol class="breadcrumb">
            <li class="active">
                <strong><a href="/Admin/Vehicle">Arac</a></strong>
            </li>
        </ol>
    </div>
</div>

<br />

<div class="btn-toolbar">
    <div class="btn-group">
        <a href="@Url.Action("New")" class="btn btn-primary btn-sm"><i class="glyphicon glyphicon-plus"></i>Add A New Bus</a> <br /> <br />
    </div>
</div>
<br />
<div class="container">
    <div class="row">
        @foreach (var vehicle in Model.Vehicles)
        {
            <div class="col-sm-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <img class="card-img-top" style="width:175px; height:175px;" src="~/Content/images/MercedesBenz-Travego.jpg" alt="Card image cap">
                        <h4 class="card-title">@vehicle.BusName</h4>
                        <h6 class="card-subtitle mb-2 text-capitalize">Aracin Plakasi : @vehicle.BusLicense</h6>
                        <div class="btn-group btn-group-xs">
                            <a href="@Url.Action("Edit", new { vehicle.ID })" class="btn btn-success">
                                <i class="glyphicon glyphicon-edit"></i> Edit
                            </a>
                            <a href="@Url.Action("Delete", new { vehicle.ID })" class="btn btn-danger" data-post="Are you sure you want to delete this post?">
                                <i class="glyphicon glyphicon-remove"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
                <br />
            </div>
        }
    </div>
</div>

