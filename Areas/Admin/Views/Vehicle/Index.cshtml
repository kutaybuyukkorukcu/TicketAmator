@model OtobusBiletiUygulamasi.Areas.Admin.ViewModels.BusVehicleIndex

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="btn-toolbar">
    <div class="btn-group">
        <a href="@Url.Action("New")" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-plus"></i>Add A New Bus</a> <br /> <br />
    </div>
</div>

<div class="container">
    <div class="row">
        @foreach (var vehicle in Model.Vehicles)
        {
            <div class="col-sm-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <img class="card-img-top" style="width:200px; height:200px;"  src="~/Content/images/MercedesBenz-Travego.jpg" alt="Card image cap">
                        <h5 class="card-title">@vehicle.BusName</h5>
                        <h6 class="card-subtitle mb-2 text-capitalize">Aracin Plakasi : @vehicle.BusLicense</h6>
                        <div class="btn-group btn-group-xs">
                            <a href="@Url.Action("Edit", new { vehicle.ID })" class="btn btn-primary">
                                <i class="glyphicon glyphicon-edit"></i> Edit
                            </a>
                            <a href="@Url.Action("Delete", new { vehicle.ID })" class="btn btn-danger" data-post="Are you sure you want to delete this post?">
                                <i class="glyphicon glyphicon-remove"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
                <br />
            </div>
        }
    </div>
</div>

