@model OtobusBiletiUygulamasi.Areas.Admin.ViewModels.BusIndex

@{
    ViewBag.Title = "LoginPage";
}

<h1>Welcome to our Login Page</h1>

<div class="btn-toolbar">
    <div class="btn-group">
        <a href="@Url.Action("New")" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-plus"></i> Create A New Bus </a> <br /> <br />
    </div>
</div>

<div class="btn-group pull-left">
    @if (Model.Buses.HasPreviousPage)
    {
        <a href="@Url.Action("Index", new { page=Model.Buses.PreviousPage })" class="btn btn-primary btn-sm"><i class="glyphicon glyphicon-chevron-left"></i> Previous Page</a>
    }
    else
    {
        <a href="#" class="btn btn-default disabled btn-sm"><i class="glyphicon glyphicon-chevron-left"></i> Previous Page</a>
    }

    @if (Model.Buses.HasNextPage)
    {
        <a href="@Url.Action("Index", new { page=Model.Buses.NextPage })" class="btn btn-primary btn-sm"><i class="glyphicon glyphicon-chevron-right"></i> Next Page</a>
    }
    else
    {
        <a href="#" class="btn btn-default disabled btn-sm"><i class="glyphicon glyphicon-chevron-right"></i> Next Page</a>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Kalkis Noktasi</th>
                <th>Varis Noktasi</th>
                <th>Kalkis Zamani</th>
                <th>Varis Zamani</th>
                <th>Kalkis Tarihi</th>
                <th>Koltuk Sayisi</th>
                <th>Fiyati</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bus in Model.Buses)
            {
                var IsNull = "";

                if(bus == null)
                {
                    IsNull = "danger";
                }

                <tr class="@IsNull">
                    <td>@bus.KalkisDest</td>
                    <td>@bus.VarisDest</td>
                    <td>@bus.KalkisTime</td>
                    <td>@bus.VarisTime</td>
                    <td>@bus.KalkisDate.ToString().Substring(0, 10)</td>
                    <td>@bus.KoltukSayisi</td>
                    <td>@bus.Fiyat</td>
                    <td>
                        <div class="btn-group btn-group-xs">
                            <a href="@Url.Action("Edit",new {bus.Bus_ID})" class="btn btn-primary">
                                <i class="glyphicon  glyphicon-edit"></i>Edit
                            </a>
                            <a href="@Url.Action("Delete",new {bus.Bus_ID})" class="btn btn-danger" data-post="Are you sure you want to delete this post?">
                                <i class="glyphicon glyphicon-remove"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>