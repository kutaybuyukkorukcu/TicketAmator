@model OtobusBiletiUygulamasi.Areas.Admin.ViewModels.CrewIndexAssistant

<!-- Assistant Index -->
@{
    ViewBag.Title = "Assistant";
}

<h2>Assistant</h2>

<div class="btn-toolbar">
    <div class="btn-group">
        <a href="@Url.Action("NewAssistant")" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-plus"></i>Add A New Assistant</a> <br /> <br />
    </div>
</div>

<div class="container">
    <div class="row">
        @foreach (var assistant in  Model.Assistants)
        { 
            <div class="col-sm-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <img class="card-img-top" src="~/Content/images/Anonymous.jpg" alt="Card image cap">
                        <h5 class="card-title">@assistant.MuavinAd @assistant.MuavinSoyad</h5>
                        <h6 class="card-subtitle mb-2 text-capitalize">TC Kimlik No : @assistant.MuavinTC</h6>
                        <h6 class="card-subtitle mb-2 text-muted">Telefon Numarasi : @assistant.MuavinNumara</h6>
                        <div class="btn-group btn-group-xs">
                            <a href="@Url.Action("EditAssistant", new { assistant.ID })" class="btn btn-primary">
                                <i class="glyphicon glyphicon-edit"></i> Edit
                            </a>
                            <a href="@Url.Action("DeleteAssistant", new { assistant.ID })" class="btn btn-danger" data-post="Are you sure you want to delete this post?">
                                <i class="glyphicon glyphicon-remove"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            <br />
            </div>
        }
    </div>
</div>