@model OtobusBiletiUygulamasi.Areas.Admin.ViewModels.CrewIndexDriver

<!-- Driver Index -->
@{
    ViewBag.Title = "Driver";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2> Ekip Islemleri </h2>
        <br />
        <ol class="breadcrumb">
            <li>
                Ekip
            </li>
            <li class="active">
                <strong><a href="/Admin/Crew/Driver">Sofor</a></strong>
            </li>
        </ol>
    </div>
</div>

<br />

<div class="btn-toolbar">
    <div class="btn-group">
        <a href="@Url.Action("NewDriver")" class="btn btn-primary btn-sm"><i class="glyphicon glyphicon-plus"></i>Add A New Driver</a> <br /> <br />
    </div>
</div>
<br />
<div class="container">
    <div class="row">
        @foreach (var driver in Model.Drivers)
        {
            <div class="col-sm-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <img class="card-img-top" src="~/Content/images/Anonymous.jpg" alt="Card image cap">
                        <h4 class="card-title">@driver.SoforAd @driver.SoforSoyad</h4>
                        <h6 class="card-subtitle mb-2 text-capitalize">TC Kimlik No : @driver.SoforTC</h6>
                        <h6 class="card-subtitle mb-2 text-muted">Telefon Numarasi : @driver.SoforNumara</h6>
                        <div class="btn-group btn-group-xs">
                            <a href="@Url.Action("EditDriver", new { driver.ID })" class="btn btn-success">
                                <i class="glyphicon glyphicon-edit"></i> Edit
                            </a>
                            <a href="@Url.Action("DeleteDriver", new { driver.ID })" class="btn btn-danger" data-post="Are you sure you want to delete this post?">
                                <i class="glyphicon glyphicon-remove"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
                <br />
            </div>
        }
    </div>
</div>